<!-- app/views/car_form/new.html.erb -->

<%= form_with(model: @car_form, url: car_forms_path, method: :post) do |form| %>
  <!-- Display validation errors -->
  <% if @car_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car_form.errors.count, "error") %> prohibited this car form from being saved:</h2>
      <ul>
        <% @car_form.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Form fields for car_form attributes -->
  <div>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :vehicle_type %>
    <%= form.select :vehicle_type, CarForm.vehicle_types.keys %>
  </div>

  <div>
    <%= form.label :vehicle_identification_number %>
    <%= form.text_field :vehicle_identification_number %>
  </div>

  <div>
    <%= form.label :describe %>
    <%= form.text_area :describe %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <!-- Submit button -->
  <div>
    <%= form.submit 'Submit Car Quotation' %>
  </div>
<% end %>
