<tr class="nested-fields">

	<td><%= f.text_field :item_name, class: "form-control", required:true %></td>

	<td><%= f.text_field :item_description, class: "form-control", required:true %></td>

	<td><%= f.text_field :quantity, class: "form-control", required:true, pattern: "[0-9]*" %></td>

	<td><%= f.text_field :unit_price, class: "form-control", required:true, pattern: "^[0-9]+([,.][0-9]+)?$" %></td>

	<td><%= f.text_field :total_price, class: "form-control", required:true, pattern: "^[0-9]+([,.][0-9]+)?$" %></td>

	<td><%= link_to_remove_association "remove line", f, class: "btn btn-default"%></td>
	
</tr>
